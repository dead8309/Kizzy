<?xml version="1.0" encoding="utf-8"?>
<FrameLayout
        android:layout_gravity="center_horizontal"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        xmlns:android="http://schemas.android.com/apk/res/android">

    <ImageView
            android:id="@+id/bubble_avatar"
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:tint="@color/white_bg"/>

    <LinearLayout
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:background="@drawable/bubble_notification"
            android:id="@+id/bubble_notifications"
            android:paddingTop="0dp"
            android:paddingBottom="1.25dp"
            android:paddingStart="5.25dp"
            android:paddingEnd="5.25dp"
            android:layout_marginTop="4dp"
            android:layout_marginStart="1dp"
            android:layout_marginEnd="1dp"
            android:layout_gravity="left"
            >
        <TextView
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/bubble_notifications_text"
                android:textSize="12dp"
                android:textStyle="bold"
                android:text="2"
                android:textColor="#fff">

        </TextView>
    </LinearLayout>

</FrameLayout>
